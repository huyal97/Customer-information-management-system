@model Infrastructure.Entities.Customer

@{
    ViewData["Title"] = "UpdateAddress";
}

<h1>UpdateAddress</h1>

<p>
    <a asp-action="CreateAddress" asp-route-id="@Model.Id">Create New Address</a>
</p>
<table class="table">
    <h1>@Html.DisplayFor(model => model.Name)</h1>
    <thead>
        <tr>
            <th>
                City
            </th>
            <th>
                Street
            </th>
            <th>
                State
            </th>
            <th>
                Zipcode
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Addresses) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateAddress", new { id = item.Id }) |
                @Html.ActionLink("Delete", "DeleteAddress", new { id = item.Id, customerId = item.CustomerId })
            </td>
        </tr>
}
    </tbody>
</table>
