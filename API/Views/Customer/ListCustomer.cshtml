@model IEnumerable<Infrastructure.Entities.Customer>

@{
    ViewData["Title"] = "ListCustomer";
}

<h1>ListCustomer</h1>

<p>
    <a asp-action="CreateCustomer">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th>               
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mails[0].Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumbers[0].PhoneNumber)
            </td>
            <td>
                @Html.ActionLink("Adresses", "ListAddress","Address",new {  id=item.Id }) |
                @Html.ActionLink("Mails", "ListMail","Mail",new { id = item.Id }) |
                @Html.ActionLink("Phones", "ListPhone","Phone" ,new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
