@model IEnumerable<Infrastructure.Entities.Customer>

@{
    ViewData["Title"] = "ListCustomer";
}

<h1>Customers</h1>

<p>
    <a asp-action="CreateCustomer">Create New Customer</a>
</p>
<script type="text/javascript" charset="utf8">
    $(document).ready(function () {
        $('#tbl1').DataTable();
    });
</script>
<table id="tbl1" class="table">
    <thead>
        <tr>
            <th>
                Tc Kimlik
            </th>
            <th>
               Name
            </th>
            <th>
                Lastname
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TcKimlik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mails[0].Mail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumbers[0].PhoneNumber)
                </td>
                <td>
                    @Html.ActionLink("Adresses", "ListAddress", "Address", new { id = item.Id }) |
                    @Html.ActionLink("Mails", "ListMail", "Mail", new { id = item.Id }) |
                    @Html.ActionLink("Phones", "ListPhone", "Phone", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteCustomer", "Customer", new { id = item.Id }) |
                    @Html.ActionLink("Update", "UpdateCustomer", "Customer", new { id = item.Id }) |
                </td>
            </tr>
        }
    </tbody>
</table>


