            <th>
                Mail
            </th>
            <th>
                CustomerId
            </th>
            <th>
                Id
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Mails)
        {
            <tr>
                <td>
