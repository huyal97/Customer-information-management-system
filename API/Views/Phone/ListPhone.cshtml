@model Infrastructure.Entities.Customer

@{
    ViewData["Title"] = "ListPhone";
}

<h1>ListPhone</h1>

<p>
    <a asp-action="CreatePhone" asp-route-id="@Model.Id">Create New Phone</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Phone Number
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PhoneNumbers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdatePhone", "Phone", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "DeletePhone", new { id = item.Id, customerId = item.CustomerId })
            </td>
        </tr>
}
    </tbody>
</table>
